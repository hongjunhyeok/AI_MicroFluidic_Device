<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <org.opencv.samples.quix2.Tutorial3View
        android:id="@+id/tutorial2_activity_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:focusable="true" />



  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:layout_weight="2.2"
          android:background="#FFFFFF"
          android:gravity="center_horizontal"
          android:visibility="visible" />
      <TextView
          android:id="@+id/textview_bg"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:visibility="invisible"
          android:layout_weight="1.5" />
      <TextView
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:visibility="invisible"
          android:layout_weight="2" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="match_parent">

      <SeekBar
          android:id="@+id/CameraZoomControls"

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button6"
          android:layout_alignLeft="@+id/button3"
          android:layout_alignEnd="@+id/button3"
          android:layout_marginLeft="-4dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="4dp"
          android:visibility="invisible" />

      <Button
          android:id="@+id/button2"
          style="@style/Widget.AppCompat.Button"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button1"
          android:layout_alignLeft="@+id/button1"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="30dp"
          android:background="#FCE6E6"
          android:backgroundTint="#FCD2D2"
          android:text="Start" />

      <Button
          android:id="@+id/button3"
          style="@style/Widget.AppCompat.Button"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button2"
          android:layout_alignLeft="@+id/button1"

          android:layout_marginTop="30dp"
          android:background="#FCE6E6"
          android:backgroundTint="#FCD2D2"
          android:text="Stop" />

      <Button
          android:id="@+id/button1"
          style="@style/Widget.AppCompat.Button"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="40dp"
          android:layout_marginTop="30dp"
          android:background="#FCE6E6"
          android:backgroundTint="#FCD2D2"
          android:text="Init" />

      <Button
          android:id="@+id/button6"
          style="@style/Widget.AppCompat.Button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button3"
          android:layout_alignLeft="@+id/button3"
          android:layout_alignRight="@+id/button3"
          android:layout_marginTop="30dp"
          android:background="#FCE6E6"
          android:backgroundTint="#FCD2D2"
          android:text="Measure" />


      <Button
          style="@style/Widget.AppCompat.Button"
          android:id="@+id/button7"

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button6"
          android:layout_alignLeft="@+id/button3"
          android:layout_alignRight="@+id/button3"
          android:layout_marginTop="30dp"
          android:background="#FCE6E6"
          android:backgroundTint="#FCD2D2"
          android:text="Return" />


      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="2dp"
          android:layout_marginTop="11dp"
          android:layout_toRightOf="@id/button6"
          android:text="BT"
          android:textSize="14dp"
          android:visibility="gone" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/CameraZoomControls"
          android:layout_alignLeft="@+id/button6"
          android:layout_alignRight="@+id/button6"
          android:layout_marginLeft="171dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="-171dp"
          android:layout_marginBottom="241dp"
          android:text="Message"
          android:textSize="20dp"
          android:visibility="invisible" />

      <TextView
          android:id="@+id/tv_RGB"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView2"
          android:layout_alignLeft="@+id/CameraZoomControls"
          android:layout_alignRight="@+id/CameraZoomControls"
          android:text="R G B"
          android:visibility="gone" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/button6"
          android:layout_marginLeft="29dp"
          android:layout_marginTop="110dp"
          android:layout_toRightOf="@id/button6"
          android:text="info"
          android:textSize="20dp"
          tools:visibility="gone" />

      <!--<TextView-->
      <!--android:id="@+id/textView5"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_alignRight="@+id/textView4"-->
      <!--android:layout_below="@+id/textView3"-->
      <!--android:layout_marginRight="26dp"-->
      <!--android:text="검사 영역" />-->

      <CheckBox
          android:id="@+id/checkBox1"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_below="@+id/CameraZoomControls"
          android:visibility="visible"
          android:layout_alignParentRight="true" />


    </RelativeLayout>
  </RelativeLayout>


</RelativeLayout>

