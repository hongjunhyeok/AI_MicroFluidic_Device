<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <org.opencv.samples.quix2.Tutorial3View
      android:id="@+id/tutorial2_activity_surface_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:focusable="true" />



</RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1.7"
          android:background="#FFFFFF"
          android:gravity="center_horizontal"
          android:visibility="visible" />
      <TextView
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:visibility="invisible"
          android:layout_weight="2" />
      <TextView
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:visibility="invisible"
          android:layout_weight="1" />

    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"



            android:layout_height="match_parent">
          <SeekBar
              android:id="@+id/CameraZoomControls"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/btn_left"
              android:layout_alignEnd="@+id/btn_right"
              android:layout_below="@+id/btn_down"
              android:layout_marginTop="10dp"
               />

          <Button
              android:id="@+id/button2"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/button1"
              android:layout_below="@+id/button1"
              android:text="Start" />

          <Button
              android:id="@+id/button3"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_below="@+id/button2"
              android:layout_alignLeft="@+id/button1"
              android:text="Stop" />

          <Button
              android:id="@+id/button1"
              android:layout_width="80dp"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="40dp"
              android:layout_marginTop="20dp"
              android:text="Init" />

          <Button
              android:id="@+id/button6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/button3"
              android:layout_alignRight="@+id/button3"
              android:layout_below="@+id/button3"
              android:text="return" />
          <Button
              android:id="@+id/btn_up"
              android:onClick="onClick0"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignRight="@+id/button3"
              android:layout_marginRight="25dp"
              android:layout_marginTop ="10dp"
              android:layout_below="@+id/button3"
              android:text="↑" />

          <Button
              android:id="@+id/btn_down"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignBaseline="@+id/btn_right"
              android:layout_alignBottom="@+id/btn_right"
              android:layout_alignStart="@+id/btn_up"
              android:onClick="onClick1"
              android:text="↓" />
          <Button
              android:id="@+id/btn_right"
              android:layout_width="wrap_content"
              android:onClick="onClick2"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/btn_down"
              android:layout_below="@+id/btn_up"
              android:text="→" />
          <Button
              android:id="@+id/btn_left"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:onClick="onClick3"
              android:layout_toLeftOf="@+id/btn_down"
              android:layout_below="@+id/btn_up"
              android:text="←" />


          <TextView
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/textView2"
              android:layout_below="@+id/textView2" />

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/CameraZoomControls"
              android:layout_alignLeft="@+id/button6"
              android:layout_alignRight="@+id/button6"
              android:text="Message"
              android:textSize="10dp"/>

          <TextView
              android:id="@+id/tv_RGB"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/CameraZoomControls"
              android:layout_alignRight="@+id/CameraZoomControls"
              android:layout_below="@+id/textView2"
              android:text="R G B" />

          <TextView
              android:id="@+id/textView4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="     " />

          <!--<TextView-->
              <!--android:id="@+id/textView5"-->
              <!--android:layout_width="wrap_content"-->
              <!--android:layout_height="wrap_content"-->
              <!--android:layout_alignRight="@+id/textView4"-->
              <!--android:layout_below="@+id/textView3"-->
              <!--android:layout_marginRight="26dp"-->
              <!--android:text="검사 영역" />-->

          <CheckBox
              android:id="@+id/checkBox1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/CameraZoomControls"
              android:text="flash" />



        </RelativeLayout>
  </RelativeLayout>


</RelativeLayout>

