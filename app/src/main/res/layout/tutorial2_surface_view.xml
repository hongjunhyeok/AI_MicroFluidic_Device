<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <org.opencv.samples.quix2.Tutorial3View
        android:id="@+id/tutorial2_activity_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:focusable="true" />



  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:layout_weight="2.3"
          android:background="#FFFFFF"
          android:gravity="center_horizontal"
          android:visibility="visible" />
      <TextView
          android:id="@+id/textview_bg"
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:visibility="invisible"
          android:layout_weight="2.5" />
      <TextView
          android:gravity="center_horizontal"
          android:background="#FFFFFF"
          android:layout_width="match_parent"
          android:layout_height="fill_parent"
          android:visibility="invisible"
          android:layout_weight="2" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"


        android:layout_height="match_parent">

      <SeekBar
          android:id="@+id/CameraZoomControls"

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/btn_down"
          android:layout_alignLeft="@+id/btn_left"
          android:layout_alignEnd="@+id/btn_right"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="0dp"
          android:visibility="visible" />

      <Button
          android:id="@+id/button2"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button1"
          android:layout_alignLeft="@+id/button1"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="0dp"
          android:text="Start" />

      <Button
          android:id="@+id/button3"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button2"
          android:layout_alignLeft="@+id/button1"
          android:text="Stop" />

      <Button
          android:id="@+id/button1"
          android:layout_width="80dp"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="39dp"
          android:layout_marginTop="13dp"
          android:text="Init" />

      <Button
          android:id="@+id/button6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button3"
          android:layout_alignLeft="@+id/button3"
          android:layout_alignRight="@+id/button3"
          android:text="return" />

      <Button
          android:id="@+id/btn_up"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button6"
          android:layout_marginStart="-60dp"
          android:layout_marginTop="11dp"
          android:layout_toEndOf="@+id/textView1"
          android:onClick="onClick0"
          android:text="↑" />

      <Button
          android:id="@+id/btn_down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/btn_right"
          android:layout_alignStart="@+id/btn_up"
          android:layout_alignBottom="@+id/btn_right"
          android:layout_marginStart="0dp"
          android:layout_marginBottom="0dp"
          android:onClick="onClick1"
          android:text="↓" />

      <Button
          android:id="@+id/btn_right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/btn_up"
          android:layout_marginLeft="1dp"
          android:layout_marginTop="0dp"
          android:layout_toRightOf="@+id/btn_down"
          android:onClick="onClick2"
          android:text="→" />

      <Button
          android:id="@+id/btn_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/btn_up"
          android:layout_toLeftOf="@+id/btn_down"
          android:onClick="onClick3"
          android:text="←" />


      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/ThresholdControls"
          android:layout_marginLeft="2dp"
          android:layout_marginTop="11dp"
          android:layout_toRightOf="@id/button6"
          android:text="BT"
          android:textSize="14dp"
          android:visibility="gone" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/CameraZoomControls"
          android:layout_alignLeft="@+id/button6"
          android:layout_alignRight="@+id/button6"
          android:layout_marginLeft="171dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="-171dp"
          android:layout_marginBottom="241dp"
          android:text="Message"
          android:textSize="20dp"
          android:visibility="invisible" />

      <TextView
          android:id="@+id/tv_RGB"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/textView2"
          android:layout_alignLeft="@+id/CameraZoomControls"
          android:layout_alignRight="@+id/CameraZoomControls"
          android:text="R G B"
          android:visibility="gone" />

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/button6"
          android:layout_marginLeft="29dp"
          android:layout_marginTop="110dp"
          android:layout_toRightOf="@id/button6"
          android:text="info"
          android:textSize="20dp" />

      <!--<TextView-->
      <!--android:id="@+id/textView5"-->
      <!--android:layout_width="wrap_content"-->
      <!--android:layout_height="wrap_content"-->
      <!--android:layout_alignRight="@+id/textView4"-->
      <!--android:layout_below="@+id/textView3"-->
      <!--android:layout_marginRight="26dp"-->
      <!--android:text="검사 영역" />-->

      <CheckBox
          android:id="@+id/checkBox1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/CameraZoomControls"
          android:layout_alignParentRight="true"
          android:text="flash" />


      <SeekBar
          android:id="@+id/ThresholdControls"

          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/CameraZoomControls"
          android:layout_alignLeft="@id/CameraZoomControls"
          android:layout_alignRight="@id/CameraZoomControls"
          android:layout_marginLeft="-2dp"
          android:layout_marginTop="7dp"
          android:layout_marginRight="2dp"
          android:max="255"
          android:visibility="gone" />

      <Button
          android:id="@+id/button15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="12dp"
          android:layout_toRightOf="@id/button2"
          android:text="+" />

      <Button

          android:id="@+id/button16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/button1"
          android:layout_marginLeft="60dp"
          android:layout_toRightOf="@id/button2"
          android:text="+" />

      <Button

          android:id="@+id/button17"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_marginLeft="0dp"
          android:layout_marginTop="12dp"
          android:layout_toRightOf="@id/button15"
          android:text="-" />

      <Button

          android:id="@+id/button18"
          android:layout_width="26dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/button1"
          android:layout_alignRight="@id/button17"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_toEndOf="@+id/button16"
          android:text="-" />

      <Button
          android:id="@+id/button20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button18"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="0dp"
          android:layout_toRightOf="@id/button3"
          android:text="+" />

      <Button

          android:id="@+id/button21"
          android:layout_width="26dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/button18"
          android:layout_alignRight="@id/button18"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_toEndOf="@+id/button16"
          android:text="-" />

      <Button
          android:id="@+id/button22"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button20"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="0dp"
          android:layout_toRightOf="@id/button6"
          android:text="+" />

      <Button

          android:id="@+id/button23"
          android:layout_width="26dp"
          android:layout_height="wrap_content"
          android:layout_below="@id/button21"
          android:layout_alignRight="@id/button18"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_toEndOf="@+id/button16"
          android:text="-" />

      <Button
          android:id="@+id/button24"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button20"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="59dp"
          android:layout_toRightOf="@id/button6"
          android:text="+" />

      <Button

          android:id="@+id/button25"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/button21"
          android:layout_alignRight="@id/button18"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="59dp"
          android:text="-" />

      <Button
          android:id="@+id/button26"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button20"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="106dp"
          android:layout_toRightOf="@id/button6"
          android:text="+" />

      <Button

          android:id="@+id/button27"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/button21"
          android:layout_alignRight="@id/button18"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="107dp"
          android:layout_marginRight="0dp"
          android:text="-" />

      <Button
          android:id="@+id/button28"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/button26"
          android:layout_marginLeft="60dp"
          android:layout_marginTop="0dp"
          android:layout_toRightOf="@id/button6"
          android:text="+" />

      <Button

          android:id="@+id/button29"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/button27"
          android:layout_alignRight="@id/button18"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="-2dp"
          android:layout_marginRight="0dp"
          android:text="-" />

    </RelativeLayout>
  </RelativeLayout>


</RelativeLayout>

