<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

  <org.opencv.samples.quix2.Tutorial3View
      android:focusable="true"
      android:id="@+id/tutorial2_activity_surface_view"
      android:layout_width="418dp"
      android:layout_height="match_parent"
      android:layout_alignParentLeft="true"
      android:layout_toLeftOf="@+id/button2" />

  <Button
      android:id="@+id/button2"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/button1"
      android:layout_below="@+id/button1"
      android:text="Start" />

  <Button
      android:id="@+id/button3"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/button2"
      android:layout_toRightOf="@+id/tutorial2_activity_surface_view"
      android:text="Stop" />

  <Button
      android:id="@+id/button1"
      android:layout_width="80dp"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:layout_marginRight="14dp"
      android:text="Init" />

  <Button
      android:id="@+id/button6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/button3"
      android:layout_alignRight="@+id/button3"
      android:layout_below="@+id/button3"
      android:text="result" />

  <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/textView2"
      android:layout_below="@+id/textView2" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/button6"
      android:layout_alignLeft="@+id/button6"
      android:layout_alignRight="@+id/button6"
      android:text="" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/tutorial2_activity_surface_view"
      android:layout_below="@+id/textView1"
      android:layout_marginRight="96dp"
      android:text="     " />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/textView3"
      android:layout_alignLeft="@+id/textView3"
      android:text="     " />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignRight="@+id/textView4"
      android:layout_below="@+id/textView3"
      android:layout_marginRight="26dp"
      android:text="검사 영역" />

  <CheckBox
      android:id="@+id/checkBox1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/textView5"
      android:text="flash" />

</RelativeLayout>